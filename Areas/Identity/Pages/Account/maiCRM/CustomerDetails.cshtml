<h2>Appointments</h2>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Customer.Appointments)
        {
            <tr>
                <td>@appointment.Date.ToShortDateString()</td>
                <td>@appointment.Time</td>
                <td>@appointment.Description</td>
            </tr>
        }
    </tbody>
</table>


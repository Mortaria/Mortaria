@page
@model Mortaria.Areas.Identity.Pages.Account.maiCRM.AddCustomerModel
@{
    ViewData["Title"] = "Add Customer";
}

<h1>@ViewData["Title"]</h1>
            <form method="post" asp-page-handler="AddCustomer">
    <div class="form-group">
        <label asp-for="Customer.AccountName"></label>
        <input asp-for="Customer.AccountName" class="form-control" />
        <span asp-validation-for="Customer.AccountName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.FirstName"></label>
        <input asp-for="Customer.FirstName" class="form-control" />
        <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Customer.LastName"></label>
        <input asp-for="Customer.LastName" class="form-control" />
        <span asp-validation-for="Customer.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Title"></label>
        <input asp-for="Customer.Title" class="form-control" />
        <span asp-validation-for="Customer.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.BusinessPhone"></label>
        <input asp-for="Customer.BusinessPhone" class="form-control" />
        <span asp-validation-for="Customer.BusinessPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Email"></label>
        <input asp-for="Customer.Email" class="form-control" />
        <span asp-validation-for="Customer.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.MobilePhone"></label>
        <input asp-for="Customer.MobilePhone" class="form-control" />
        <span asp-validation-for="Customer.MobilePhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Direct"></label>
        <input asp-for="Customer.Direct" class="form-control" />
        <span asp-validation-for="Customer.Direct" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Address"></label>
        <input asp-for="Customer.Address" class="form-control" />
        <span asp-validation-for="Customer.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.City"></label>
        <input asp-for="Customer.City" class="form-control" />
        <span asp-validation-for="Customer.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.State"></label>
        <input asp-for="Customer.State" class="form-control" />
        <span asp-validation-for="Customer.State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.TimeZone"></label>
        <input asp-for="Customer.TimeZone" class="form-control" />
        <span asp-validation-for="Customer.TimeZone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Industry"></label>
        <input asp-for="Customer.Industry" class="form-control" />
        <span asp-validation-for="Customer.Industry" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.RevenueInMillions"></label>
        <input asp-for="Customer.RevenueInMillions" class="form-control" />
        <span asp-validation-for="Customer.RevenueInMillions" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Priority"></label>
        <select asp-for="Customer.Priority" class="form-control">
            <option value="High">High</option>
            <option value="Medium">Medium</option>
            <option value="Low">Low</option>
        </select>
        <span asp-validation-for="Customer.Priority" class="text-danger"></span>
    </div>

     <div class="form-group">
        <label asp-for="Customer.CallCount"></label>
        <input asp-for="Customer.CallCount" class="form-control" />
        <span asp-validation-for="Customer.CallCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.RelationshipType"></label>
        <input asp-for="Customer.RelationshipType" class="form-control" />
        <span asp-validation-for="Customer.RelationshipType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.QuickNote"></label>
        <input asp-for="Customer.QuickNote" class="form-control" />
        <span asp-validation-for="Customer.QuickNote" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.QualityNote"></label>
        <input asp-for="Customer.QualityNote" class="form-control" />
        <span asp-validation-for="Customer.QualityNote" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Customer</button>

</form>

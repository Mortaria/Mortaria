@model Mortaria.Areas.Identity.Pages.Account.Login.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="register__container col-md-4">
            <div class="info__container col-md-4">
                <h1 class="info__header--title"><span class="purple">REGISTER</span></h1>
                <form id="registerForm" class="info__form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="info__header--subtitle">Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form__input form__input--email form-floating mb-3">
                        <input asp-for="Input.Email" class="form__input--field form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        <!-- <label asp-for="Input.Email" class="info__label">Email</label> -->
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form__input form-floating mb-3">
                        <input asp-for="Input.BusinessName" class="form__input--field form-control" autocomplete="business" aria-required="true" placeholder="Business Name"/>
                        <!-- <label asp-for="Input.BusinessName" class="info__label">Business Name</label> -->
                        <span asp-validation-for="Input.BusinessName" class="text-danger"></span>
                    </div>

                    <div class="form__input form-floating mb-3">
                        <input asp-for="Input.Password" class="form__input--field form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                        <!-- <label asp-for="Input.Password" class="info__label">Password</label> -->
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form__input form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form__input--field form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                        <!-- <label asp-for="Input.ConfirmPassword" class="info__label">Confirm Password</label> -->
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
